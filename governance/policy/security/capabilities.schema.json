{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-os.local/schemas/security/capabilities.schema.json",
  "title": "AI-OS Capability Policy",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "default_effect",
    "interpretation_authority",
    "conflict_resolution",
    "severity_gating",
    "capability_sets"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+$"
    },
    "default_effect": {
      "type": "string",
      "enum": ["deny"]
    },
    "interpretation_authority": {
      "type": "string",
      "const": "supervisor"
    },
    "conflict_resolution": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode", "tie_breaker", "stable_order_mode"],
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["deny_wins", "most_specific", "explicit_priority"]
        },
        "tie_breaker": {
          "type": "string",
          "const": "stable_order"
        },
        "stable_order_mode": {
          "type": "string",
          "enum": ["lexical_rule_id", "order_index"]
        }
      }
    },
    "severity_gating": {
      "type": "object",
      "additionalProperties": false,
      "required": ["allow", "warn", "block", "review"],
      "properties": {
        "allow": {
          "type": "string",
          "const": "proceed"
        },
        "warn": {
          "type": "string",
          "const": "proceed_with_audit"
        },
        "block": {
          "type": "string",
          "const": "deny_with_audit"
        },
        "review": {
          "type": "string",
          "const": "pause_require_ledgered_decision"
        }
      }
    },
    "reserved_tool_names": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_\\-]+$"
      },
      "uniqueItems": true
    },
    "capability_sets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "selector", "grants"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$"
          },
          "priority": {
            "type": "integer",
            "minimum": 0
          },
          "order_index": {
            "type": "integer",
            "minimum": 0
          },
          "selector": {
            "type": "object",
            "additionalProperties": false,
            "required": ["tool"],
            "properties": {
              "tool": {
                "type": "string",
                "pattern": "^[a-z0-9_\\-.*]+$"
              },
              "risk_level": {
                "type": "string",
                "enum": ["low", "medium", "high"]
              }
            }
          },
          "grants": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["domain", "effect"],
              "properties": {
                "domain": {
                  "type": "string",
                  "enum": [
                    "workspace.read",
                    "http.request",
                    "tool.invoke",
                    "secret.presence",
                    "secret.inject"
                  ]
                },
                "effect": {
                  "type": "string",
                  "enum": ["allow", "review", "warn", "block"]
                },
                "constraints": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "allowed_prefixes": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "uniqueItems": true
                    },
                    "max_items": {
                      "type": "integer",
                      "minimum": 0
                    },
                    "max_bytes": {
                      "type": "integer",
                      "minimum": 0
                    },
                    "timeout_ms": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 300000
                    }
                  }
                }
              }
            }
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "selector": {
                  "properties": {
                    "tool": {
                      "const": "*"
                    }
                  },
                  "required": ["tool"]
                }
              }
            },
            "then": {
              "properties": {
                "grants": {
                  "items": {
                    "properties": {
                      "effect": {
                        "enum": ["block", "review"]
                      }
                    },
                    "required": ["effect"]
                  }
                }
              }
            }
          }
        ]
      }
    }
  }
}
