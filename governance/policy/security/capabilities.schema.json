{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-os.local/schemas/security/capabilities.schema.json",
  "title": "AI-OS Capability Policy",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "default_effect",
    "capability_sets"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+$"
    },
    "default_effect": {
      "type": "string",
      "enum": ["deny"]
    },
    "reserved_tool_names": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_\\-]+$"
      },
      "uniqueItems": true
    },
    "capability_sets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["selector", "grants"],
        "properties": {
          "selector": {
            "type": "object",
            "additionalProperties": false,
            "required": ["tool"],
            "properties": {
              "tool": {
                "type": "string",
                "pattern": "^[a-z0-9_\\-.*]+$"
              },
              "risk_level": {
                "type": "string",
                "enum": ["low", "medium", "high"]
              }
            }
          },
          "grants": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["domain", "effect"],
              "properties": {
                "domain": {
                  "type": "string",
                  "enum": [
                    "workspace.read",
                    "http.request",
                    "tool.invoke",
                    "secret.presence",
                    "secret.inject"
                  ]
                },
                "effect": {
                  "type": "string",
                  "enum": ["allow", "review", "warn", "block"]
                },
                "constraints": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    }
  }
}
