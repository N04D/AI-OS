{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-os.local/schemas/security/secrets-boundary.schema.json",
  "title": "AI-OS Secrets Boundary Policy",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "interpretation_authority",
    "plaintext_to_tool_forbidden",
    "disallowed_injection_modes",
    "secret_aliases",
    "injection_rules",
    "audit"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+$"
    },
    "interpretation_authority": {
      "type": "string",
      "const": "supervisor"
    },
    "plaintext_to_tool_forbidden": {
      "type": "boolean",
      "const": true
    },
    "disallowed_injection_modes": {
      "type": "array",
      "const": ["query_param", "url_path"],
      "items": {
        "type": "string"
      }
    },
    "secret_aliases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["alias", "secret_ref"],
        "properties": {
          "alias": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$"
          },
          "secret_ref": {
            "type": "object",
            "additionalProperties": false,
            "required": ["provider", "key"],
            "properties": {
              "provider": {
                "type": "string",
                "enum": ["vault", "env", "keychain", "kms"]
              },
              "key": {
                "type": "string",
                "pattern": "^[A-Za-z0-9_./:@-]+$"
              },
              "version": {
                "type": "string"
              }
            }
          },
          "expires_at_required": {
            "type": "boolean"
          },
          "rotation_ttl_seconds": {
            "type": "integer",
            "minimum": 1
          }
        },
        "oneOf": [
          {
            "required": ["expires_at_required"],
            "properties": {
              "expires_at_required": {
                "const": true
              }
            }
          },
          {
            "required": ["rotation_ttl_seconds"]
          }
        ]
      }
    },
    "injection_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "alias", "target", "location", "effect"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$"
          },
          "alias": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$"
          },
          "target": {
            "type": "object",
            "additionalProperties": false,
            "required": ["host_pattern", "path_prefix"],
            "properties": {
              "host_pattern": {
                "type": "string",
                "pattern": "^(\\*\\.)?[A-Za-z0-9.-]+$"
              },
              "path_prefix": {
                "type": "string",
                "pattern": "^/.+"
              }
            }
          },
          "location": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["bearer", "header", "body_field", "query_param", "url_path"]
              },
              "name": {
                "type": "string"
              },
              "prefix": {
                "type": "string"
              },
              "content_type": {
                "type": "string"
              },
              "redaction_required": {
                "type": "boolean"
              }
            }
          },
          "effect": {
            "type": "string",
            "enum": ["allow", "review", "warn", "block"]
          },
          "exception": {
            "type": "object",
            "additionalProperties": false,
            "required": ["exception_justification", "exception_ttl_seconds", "severity_on_use"],
            "properties": {
              "exception_justification": {
                "type": "string",
                "minLength": 10
              },
              "exception_ttl_seconds": {
                "type": "integer",
                "minimum": 1
              },
              "severity_on_use": {
                "type": "string",
                "const": "review"
              }
            }
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "location": {
                  "properties": {
                    "type": {
                      "enum": ["query_param", "url_path"]
                    }
                  },
                  "required": ["type"]
                }
              }
            },
            "then": {
              "required": ["exception"],
              "properties": {
                "effect": {
                  "const": "review"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "location": {
                  "properties": {
                    "type": {
                      "const": "body_field"
                    }
                  },
                  "required": ["type"]
                }
              }
            },
            "then": {
              "properties": {
                "location": {
                  "required": ["name", "content_type", "redaction_required"],
                  "properties": {
                    "redaction_required": {
                      "const": true
                    }
                  }
                }
              }
            }
          }
        ]
      }
    },
    "audit": {
      "type": "object",
      "additionalProperties": false,
      "required": ["emit_secret_use_events", "redact_secret_values"],
      "properties": {
        "emit_secret_use_events": {
          "type": "boolean",
          "const": true
        },
        "redact_secret_values": {
          "type": "boolean",
          "const": true
        }
      }
    }
  }
}
