{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-os.local/schemas/security/network-egress.schema.json",
  "title": "AI-OS Network Egress Policy",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "default_effect",
    "require_https",
    "deny_private_ips",
    "rules"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+$"
    },
    "default_effect": {
      "type": "string",
      "enum": ["deny"]
    },
    "require_https": {
      "type": "boolean",
      "const": true
    },
    "deny_private_ips": {
      "type": "boolean",
      "const": true
    },
    "deny_url_userinfo": {
      "type": "boolean",
      "default": true
    },
    "max_request_body_bytes": {
      "type": "integer",
      "minimum": 1,
      "default": 1048576
    },
    "max_response_body_bytes": {
      "type": "integer",
      "minimum": 1,
      "default": 10485760
    },
    "timeout_ms": {
      "type": "integer",
      "minimum": 1,
      "maximum": 300000,
      "default": 30000
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "host", "methods", "effect"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$"
          },
          "host": {
            "type": "string",
            "pattern": "^(\\*\\.)?[A-Za-z0-9.-]+$"
          },
          "path_prefix": {
            "type": "string",
            "default": "/"
          },
          "methods": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD"]
            }
          },
          "effect": {
            "type": "string",
            "enum": ["allow", "review", "warn", "block"]
          }
        }
      }
    }
  }
}
