{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-os.local/schemas/security/network-egress.schema.json",
  "title": "AI-OS Network Egress Policy",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "default_effect",
    "interpretation_authority",
    "conflict_resolution",
    "require_https",
    "deny_private_ips",
    "dns_replay_mode",
    "rules"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+$"
    },
    "default_effect": {
      "type": "string",
      "enum": ["deny"]
    },
    "interpretation_authority": {
      "type": "string",
      "const": "supervisor"
    },
    "conflict_resolution": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode", "tie_breaker", "stable_order_mode"],
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["deny_wins", "most_specific", "explicit_priority"]
        },
        "tie_breaker": {
          "type": "string",
          "const": "stable_order"
        },
        "stable_order_mode": {
          "type": "string",
          "enum": ["lexical_rule_id", "order_index"]
        }
      }
    },
    "require_https": {
      "type": "boolean",
      "const": true
    },
    "deny_private_ips": {
      "type": "boolean",
      "const": true
    },
    "deny_url_userinfo": {
      "type": "boolean",
      "const": true
    },
    "dns_replay_mode": {
      "type": "string",
      "enum": ["pinned_ips", "resolution_snapshot_hash"]
    },
    "denylist": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "host_or_cidr", "reason"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$"
          },
          "host_or_cidr": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          }
        }
      }
    },
    "max_request_body_bytes": {
      "type": "integer",
      "minimum": 1,
      "default": 1048576
    },
    "max_response_body_bytes": {
      "type": "integer",
      "minimum": 1,
      "default": 10485760
    },
    "timeout_ms": {
      "type": "integer",
      "minimum": 1,
      "maximum": 300000,
      "default": 30000
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "host", "path_prefix", "methods", "effect"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$"
          },
          "priority": {
            "type": "integer",
            "minimum": 0
          },
          "order_index": {
            "type": "integer",
            "minimum": 0
          },
          "host": {
            "type": "string",
            "allOf": [
              {
                "not": {
                  "const": "*"
                }
              },
              {
                "pattern": "^(\\*\\.)?[A-Za-z0-9.-]+$"
              }
            ]
          },
          "max_subdomain_depth": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10
          },
          "path_prefix": {
            "type": "string",
            "pattern": "^/.+"
          },
          "methods": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD"]
            }
          },
          "effect": {
            "type": "string",
            "enum": ["allow", "review", "warn", "block"]
          },
          "dns": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "pinned_ips": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                },
                "uniqueItems": true
              },
              "resolution_snapshot_hash": {
                "type": "string",
                "pattern": "^[a-f0-9]{64}$"
              }
            }
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "host": {
                  "pattern": "^\\*\\..+"
                }
              },
              "required": ["host"]
            },
            "then": {
              "required": ["max_subdomain_depth"]
            }
          }
        ]
      }
    }
  }
}
